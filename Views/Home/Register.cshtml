@{
    ViewData["Title"] = "Register";
}
<!--Users will enter their personal details and role
    these details will be inserted to the db 
    must be on the edit page of IC personal details
    hash password, use form validation
    replace place holders with guides
     REMOVE SAMPLE DATA IN PART 2

-->
<div class="form-container">

    <h3>Registration</h3>
    <h2>Enter your personal details to submit claims</h2>
        <form>
            <div class="field">
                <div class="input-field">
                    <label>Name</label>
                    <input type="text" placeholder="Zoe" name="name" required />
                </div>
            <div class="input-field">
                <label>Surname</label>
                <input type="text" placeholder="Baloyi" name="surname" required />
            </div>
            <div class="input-field">
                <label>Contact Number</label>
                <input type="text" placeholder="0847681123" name="contact" required />
            </div>
            <div class="input-field">
                <label>Physical Address</label>
                <input type="text" placeholder="23 Jorisson Street,Parkrest,JHB" name="address" required />
            </div>
            <div class="input-field">
                <label>Username</label>
                <input type="email" placeholder="IC123456@rconect.edu.org" name="email" required />
            </div>
            <div class="input-field">
                <label>Password</label>
                <input type="password" placeholder="*****" name="password" required />
            </div>
            <div class="input-field">
                <label>Role</label>
                <select name="usertype" required>
                    <option value="Independent Contractor">Independent Contractor</option>
                    <option value="Project Coordinator">Project Coordinator</option>
                    <option value="Academic Manager">Academic Manager</option>
                </select>
            </div>
            </div>
          <button class="btn btn-primary" type="submit">Save & Sumbit</button>
         <button class="btn btn-primary" type="submit">Back</button>
        </form>
</div>